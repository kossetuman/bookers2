<%= render 'books/book', user: @user, book: @book %>
<div class="col-8 offset-md-1">
                <h2>Users</h2>
                <table class="table table-hover table-inverse">
                  <thead>
                    <tr>
                      <th>image</th>
                      <th>name</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @user_index.each do |user| %>
                      <tr>
                        <td><%= attachment_image_tag user, :profile_image, fallback: "no_image1.jpg"%></td>
                        <td><%= user.name %></td>
                        <td><%= link_to "Show", users_path(user.id) %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>

            </div>
        </div>
      </div>
    </main>

  </body>
  </html>