
      <p id="notice"></p>
        <div class="containar">
          <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
              <h2>User info</h2>
              <div class="error-message">
               <% if @user.errors.any? %>
                 <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
                     <% @user.errors.full_messages.each do |message| %>
                       <ul>
                         <li><%= message %></li>
                       </ul>
                     <% end %>
               <% end %>
             </div>
                <%= form_with model:@user, local:true do |f| %>
                <div class="form-group mt-3">
                  <label for="user_name">Name</label>
                    <div class="form-controll name"><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></div>
                </div>
                <div class="form-group">
                  <label for="user_image">Image</label>
                    <div class="form-controll-file user_image"> <%= f.attachment_field :profile_image %></div>
                </div>
                <div class="form-group">
                  <label for="user_introduction">Introduction</label>
                  <div class="form-controll introduction"><%= f.text_area :introduction %></div>
                </div>
                    <%= f.submit "Update User", class: "btn btn-secondary" %>
                <% end %>
            </div>
          </div>
        </div>
